@model LoginLogoutViewComponentViewModel

<div id="title-and-welcome">
    <div class="navbar-header">
        <a id="site-title" class="navbar-brand" href="/">Golf Bag</a>
    </div>
    @if (User.Identity.IsAuthenticated)
    {
        <h4 id="welcome-nav">Welcome, @Model.FirstName @Model.LastName</h4>
    }
</div>

<div id="navbar-toggler" class="btn btn-success navbar-toggle"
     data-toggle="collapse" data-target=".navbar-collapse">
    <i class="fa fa-angle-down"></i>
</div>
<div id="main-collapsing-navbar" class="navbar-header navbar-collapse navbar-right collapse">
    @if (User.Identity.IsAuthenticated)
    {

        <ul class="nav navbar-nav">
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button"
                   aria-haspopup="true" aria-expanded="false">Rounds<span class="caret"></span></a>
                <ul class="dropdown-menu">
                    <li><a asp-controller="RoundOfGolf" asp-action="EnterScore">Enter Score</a></li>
                    <li><a asp-controller="RoundOfGolf" asp-action="ViewRounds">View Rounds</a></li>
                </ul>
            </li>
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button"
                   aria-haspopup="true" aria-expanded="false">Manage Courses<span class="caret"></span></a>
                <ul class="dropdown-menu">
                    <li><a asp-controller="RoundOfGolf" asp-action="EditCourses">Edit Courses</a></li>
                    <li><a asp-controller="RoundOfGolf" asp-action="EnterCourse">Enter New Course</a></li>
                </ul>
            </li>
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button"
                   aria-haspopup="true" aria-expanded="false">Account<span class="caret"></span></a>
                <ul class="dropdown-menu">
                    <li><a asp-controller="Account" asp-action="ManageAccount">Manage Account</a></li>
                    <li>
                        <form id="logout-button" class="hidden" method="post" asp-controller="Account" asp-action="Logout" asp-antiforgery="true"></form>
                        <a id="logout-button-a" href="javascript:$('#logout-button').submit();">Log Out</a>
                    </li>
                </ul>
            </li>
        </ul>
    }
    else
    {
        <ul class="nav navbar-nav">
            <li><a asp-controller="Account" asp-action="Register">Create New Account</a></li>
            <li><a asp-controller="Account" asp-action="Login">Log In</a></li>
        </ul>
    }
</div>
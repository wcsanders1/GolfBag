@model LoginViewModel
@{ 
    ViewBag.Title = "Login";
}

<h1>@ViewBag.Message</h1>

<h2>Login</h2>

<form class="account-form" method="post" asp-antiforgery="true">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <label asp-for="Username"></label>
        <input asp-for="Username" class="form-control"/>
        <span asp-validation-for="Username"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control"/>
        <span asp-validation-for="Password"></span>
    </div>
    <div class="checkbox">
        <label asp-for="RememberMe">
            <input asp-for="RememberMe" /> Remember Me
        </label>
        <span asp-validation-for="RememberMe"></span>
    </div>
    <input type="submit" value="Login" class="btn btn-success"/>
</form>

<h2>Reset Password</h2>

<form class="account-form" asp-action="SendPasswordResetLink" asp-controller="Account"
       asp-antiforgery="true" method="post">
    <div class="form-group">
        <label asp-for="Username">User Name:</label>
        <input asp-for="Username" class="form-control" />
    </div>
    <input type="submit" value="Reset Password" class="btn btn-success" />
</form>
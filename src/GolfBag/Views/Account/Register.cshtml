@model RegisterUserViewModel

@{ 
    ViewBag.Title = "Register";
}

<h1 class="form-header">Register</h1>

<form class="account-form" method="post" asp-antiforgery="true">
    <div asp-validation-summary="ModelOnly"></div>

    <div class="field">
        <label class="field-label" asp-for="Username">User Name</label>
        <input class="field-input" asp-for="Username" placeholder="User Name"/>  
    </div>
    <span asp-validation-for="Username"></span>

    <div class="field">
        <label class="field-label" asp-for="Password">Password</label>
        <input class="field-input" asp-for="Password" placeholder="Password"/>
    </div>
    <span asp-validation-for="Password"></span>

    <div class="field">
        <label class="field-label" asp-for="ConfirmPassword">Confirm Password</label>
        <input class="field-input" asp-for="ConfirmPassword" placeholder="Confirm Password"/>
    </div>
    <span asp-validation-for="ConfirmPassword"></span>

    <div class="field">
        <label class="field-label" asp-for="Email">Email</label>
        <input class="field-input" asp-for="Email" placeholder="Email"/>
    </div>
    <span asp-validation-for="Email"></span>

    <div class="field">
        <label class="field-label" asp-for="FirstName">First Name</label>
        <input class="field-input" asp-for="FirstName" placeholder="First Name"/>
    </div>
    <span asp-validation-for="FirstName"></span>

    <div class="field">
        <label class="field-label" asp-for="LastName">Last Name</label>
        <input  class="field-input" asp-for="LastName" placeholder="Last Name"/>
    </div>
    <span asp-validation-for="LastName"></span>

    <div>
        <input type="submit" value="Register" class="btn btn-success" />
    </div>
</form>

<script type="text/javascript" src="~/js/FloatingLabels.js"></script>
@model List<string>

<div class="dropdown">
    <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">
        Choose A Course To Edit
        <span class="caret"></span>
    </button>
    <ul class="dropdown-menu list-group">

        @foreach (var course in Model)
        {
            <li class="list-group-item">
                <a data-ajax="true" data-target="#display-course-to-edit"
                   data-action="@Url.Action("EditCourse", "RoundOfGolf",
                                new { courseName = course })">
                    @course
                </a>
            </li>
        }

    </ul>
</div>

<h1>@ViewBag.Message</h1>

<div id="display-course-to-edit"></div>

<script src="~/js/_DisplayCourseToEdit.js" type="text/javascript"></script>
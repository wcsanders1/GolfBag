@model CourseViewModel

<div id="eighteen-hole-table" class="table-responsive">
    <table class="table table-bordered table-striped">
        <tbody>
            <tr>
                @for (int i = 9; i <= 18; i++)
                {
                    if (i == 9)
                    {
                        <th></th>
                    }
                    else
                    {
                        <th>@i</th>
                    }
                }
            </tr>

            <tr>
                <td>Enter Par</td>
                @for (int i = 9; i < 18; i++)
                {
                    <td class="number-input">@Html.EditorFor(m => m.Pars[i])</td>
                }
            </tr>
            @for (int i = 0; i < 6; i++)
            {
                if (i >= 3)
                {
                    <tr class="back-nine-tee-box-input hidden">
                        <td>@Html.EditorFor(m => m.TeeBoxes[i].Name)</td>
                        @for (int x = 9; x < 18; x++)
                        {
                            <td class="number-input">@Html.EditorFor(m => m.TeeBoxes[i].Tees[x].Yardage)</td>
                        }
                    </tr>
                }
                else
                {
                    <tr class="back-nine-tee-box-input">
                        <td>@Html.EditorFor(m => m.TeeBoxes[i].Name)</td>
                        @for (int x = 9; x < 18; x++)
                        {
                            <td class="number-input">@Html.EditorFor(m => m.TeeBoxes[i].Tees[x].Yardage)</td>
                        }
                    </tr>
                }
            }

            <tr>
                <td>Enter Handicap</td>
                @for (int i = 9; i < 18; i++)
                {
                    <td class="number-input">@Html.EditorFor(m => m.Handicaps[i])</td>
                }
            </tr>

        </tbody>
    </table>
</div>
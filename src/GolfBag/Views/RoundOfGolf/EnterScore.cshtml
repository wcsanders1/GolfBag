@section leftSidebar {
    <h3>Enter New Score</h3>
    <div class="dropdown open">
        <ul class="dropdown-menu list-group">

            @foreach (var course in Model)
            {
                <li class="list-group-item">
                    <a data-ajax="true" data-target="#display-course"
                       data-action="@Url.Action("DisplayCourse", "RoundOfGolf",
                                new { courseId = course.Key })">
                        @course.Value
                    </a>
                </li>
            }

        </ul>
    </div>
}

